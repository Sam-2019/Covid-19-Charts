//All 
  componentDidMount() {
    this.getAll();
  }
  componentWillUnmount() {
    clearTimeout(this.intervalID);
  }

  getAll = () => {
    fetch("https://corona.lmao.ninja/v2/all")
      .then((response) => response.json())
      .then((all) => {
        this.setState({ all });
        this.intervalID = setTimeout(this.getAll.bind(this), 5000);
      });
  };

  //Countries
