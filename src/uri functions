  getContinents = () => {
    fetch("https://disease.sh/v2/continents")
      .then((response) => response.json())
      .then((continents) => {
        this.setState({ continents });
        this.intervalID = setTimeout(this.getContinents.bind(this), 5000);
      });
  };

